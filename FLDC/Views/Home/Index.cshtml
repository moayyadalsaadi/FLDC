@model Graduation_Project.ViewModels.HomeDataViewModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--This is the Home Page-->
<!--start the news bar-->
<div class="marqueeFull  wow fadeIn">
    <div class="marquee-container">
        <div class="marquee">
            <div class="lable  wow fadeInRight">شريط الاخبار </div>
            <marquee direction="right" SCROLLDELAY=150 onmouseover="this.stop()" onmouseout="this.start()" width="auto">
                @foreach (var item in Model.news)
                {
                    <span>-</span>
                    <span>@item.NewsContent</span>
                    <a href="@item.Link" target="_blank" style="padding-left:10px">الرابط</a>
                }
            </marquee>
        </div>
    </div>
</div>
<!--End the news bar-->
<!-- start slider -->
<div class="slider wow zoomInDown">

    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">

            <div class="carousel-item active">                                                              
                <img src="~/ImagesOfProject/CenterPhotos/hole in university.jpg" class="d-block " alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>قاعة الندوات بمركز تنمية قدرات اعضاء هيئة التدريس والقيادات</h5>
                    <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                </div>
            </div>

            @foreach (var item in Model.CenterPhotos)
            {
                <div class="carousel-item">
                    <img src="@Url.Content(item.Path)" class="d-block " alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <p>@item.Description</p>
                    </div>
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!-- End Slider -->
<!-- start manager word -->
<div class="intro-word wow fadeIn">
    <div class="container ">
        <div class="title wow fadeInLeftBig">مرحبا بكم في مركز تنمية قدرات اعضاء هيئة التدريس والقيادات</div>
        <div class="text wow fadeInRight">يمثل مركز تنمية قدرات اعضاء هيئة التدريس والقيادات الآلية الاهم في إحداث عملية تطوير وتحديث التعليم العالي بمصر , ذلك أنه يركز على أهم مكون في العملية التعليمية وهو عضو هيئة التدريس والقيادات الجامعية </div>
    </div>
</div>
<!-- end manager word -->
<!--start content-->
<div class="container ">
    <div class="title wow zoomInRight ">كلمة المدير </div>
    <div class="row ">
        @foreach (var item in Model.PresidentWords)
        {
            <div class="card manager-word  col-lg-3 col-md-12 col-sm-12 wow fadeInDown  ">
                <img src="@Url.Content(item.Path)" class="card-img-top " alt="... ">
                <div class="card-body ">
                    <h5 class="card-title ">@item.Name</h5>
                    <h5 class="card-title ">@item.Description</h5>
                    <p class="card-text" style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis">
                        @item.Text
                    </p>
                    @Html.ActionLink("المزيد", "Index", "PresidentWord", null, new { @class = "" })
                </div>
            </div>
        }

    </div>
</div>
<!-- خطواط التقديم -->
<div class="order">
    <div class="container">
        <table class="table">
            <div class="title"> خطوات تقديم في اي من برامج المركز </div>
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">الخطوات</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>
                        الدخول من خلال الموقع الإلكتروني أو تطبيق الموبايل واختيار البرنامج التدريبي المطلوب وتسجيل البيانات .
                    </td>

                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>
                        بعد اكتمال عملية التسجيل بنجاح يتم تنزيل الاستمارة لمستخدمي التطبيق يتم حفظ الملف في فولدر (FLDC).
                    </td>

                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>
                        طباعة الاستمارة واعتمادها من عميد الكلية أو من ينوب عنه و تجهيز بيان الحالة.
                    </td>
                </tr>
                <tr>
                    <th scope="row">4</th>
                    <td>
                        التأكد من أن البرنامج التدريبي متاح للحجز ثم دفع الرسوم المطلوبة.
                    </td>
                </tr>
                <tr>
                    <th scope="row">5</th>
                    <td>
                        الدخول علي الموقع او التطبيق وتسجيل الدخول بالكود ثم رفع الصور المطلوبة وهي (1- الاستماره بعد اعتمادها 2- بيان الحالة 3- إيصال الدفع ).
                    </td>
                </tr>
                <tr>
                    <th scope="row">6</th>
                    <td>يتم مراجعة البيانات من خلالنا وارسال بريد للتأكيد </td>
                </tr>
                <tr>
                    <th scope="row">7</th>
                    <td>في حالة طلب تأجيل </td>
                </tr>
                <tr>
                    <th scope="row">8</th>
                    <td>
                        الذهاب إلى متابعة الطلب من خلال الموقع او التطبيق والدخول بالكود .
                    </td>
                </tr>
                <tr>
                    <th scope="row">9</th>
                    <td> اختيار تأجيل الحجز ( لن يسمح بالتأجيل قبل معاد بداية البرنامج التدريبي ب 48 ساعة ). </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!--  end content-->
